#!/bin/bash

fail() {
  echo "$(basename $0) failed: $1" >&2
  exit 1
}

[[ $USER == 'root' ]] || fail "must be run as root"

cd "$( dirname "$0" )/.."

sudo -u appacademy maintenance/update_repos
sudo -u appacademy setup/install_gca
setup/install_dependencies

setup/enable_accessibility
launchctl/install
